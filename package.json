{
    "name": "identity",
    "version": "0.0.0",
    "description": "The identity service.",
    "author": "NeonCity team",
    "scripts": {
        "build": "webpack",
        "serve": "node out/app.js",
        "pretest": "webpack",
        "test": "mocha out/tests.js",
        "test-with-coverage": "webpack && istanbul cover --config ./.istanbul.yml ./node_modules/mocha/bin/_mocha -- out/tests.js && remap-istanbul -t lcovonly -i ./out/coverage/coverage.json -o ./out/coverage/coverage.remapped.lcov",
        "push-coverage-to-coveralls": "wc ./out/coverage/coverage.remapped.lcov && cat ./out/coverage/coverage.remapped.lcov | ./node_modules/coveralls/bin/coveralls.js"
    },
    "respository": {
        "type": "git",
        "url": "git+https://github.com/neoncity/identity.git"
    },
    "license": "UNLICENSED",
    "private": true,
    "homepage": "https://github.com/neoncity/identity#readme",
    "files": [
        "out",
        "src",
        "Procfile",
        "webpack.config.js"
    ],
    "dependencies": {
        "es6-promise": "^4.0.5",
        "express": "^4.14.0",
        "isomorphic-fetch": "^2.2.1"
    },
    "devDependencies": {
        "@types/chai": "^3.4.34",
        "@types/es6-promise": "0.0.32",
        "@types/express": "^4.0.34",
        "@types/isomorphic-fetch": "0.0.31",
        "@types/mocha": "^2.2.37",
        "@types/node": "^7.0.0",
        "chai": "^3.5.0",
        "coveralls": "^2.11.15",
        "istanbul": "^0.4.5",
        "json-loader": "^0.5.4",
        "mocha": "^3.2.0",
        "mocha-lcov-reporter": "^1.2.0",
        "remap-istanbul": "^0.8.4",
        "ts-loader": "^1.3.3",
        "typescript": "^2.1.5",
        "webpack": "^1.13.2",
        "webpack-fail-plugin": "^1.0.5"
    }
}
